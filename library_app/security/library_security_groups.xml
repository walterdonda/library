<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="libreria_user_group" model="res.groups">
          <field name="name">Usuario</field>
          <field name="category_id" ref= "base.module_category_services_library"></field>
          <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
      </record>
      <record id="libreria_manager_group" model="res.groups">
          <field name="name">Manager</field>
          <field name="category_id" ref= "base.module_category_services_library"></field>
          <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
          <field name="users" eval="[(4,ref('base.user_admin'))]" />
      </record>
      
      </data>
      <data>
      <record id="book_user_rule" model="ir.rule">
          <field name="name">Acceso del grupo usuario a libros</field>
          <field name="model_id" ref="model_library_book"/>
          <field name="domain_force">[('active','=','True')]</field>
          <field name="groups_id" eval="[(4, ref('libreria_user_group'))]"/>
          <field name="active" eval="True" />
      </record>
      </data>
</odoo>
